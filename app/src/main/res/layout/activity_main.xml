<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="adib.mehedi.simplecalculator.MainActivity">


    <TextView
        android:id="@+id/edit_text_mainscreen"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="0"
        android:gravity="end"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <Button
        android:id="@+id/button_memory_plus"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_text_mainscreen"
        android:layout_marginTop="5dp"
        android:hint="M+"
        android:background="#2196F3"
        />
    <Button
        android:id="@+id/button_memory_minus"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_text_mainscreen"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="85dp"
        android:hint="M-"
        android:background="#2196F3"/>

    <Button
        android:id="@+id/button_mrc"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_text_mainscreen"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="170dp"
        android:hint="MRC"
        android:background="#2196F3"/>

    <Button
        android:id="@+id/button_ac"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_text_mainscreen"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="255dp"
        android:hint="AC"
        android:background="#2196F3"/>

    <Button
        android:id="@+id/button_seven"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_memory_plus"
        android:layout_marginTop="5dp"
        android:hint="7"
        />

    <Button
        android:id="@+id/button_eight"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_memory_minus"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="85dp"
        android:hint="8"
        />

    <Button
        android:id="@+id/button_nine"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_memory_plus"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="170dp"
        android:hint="9"
        />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_memory_plus"
        android:layout_marginTop="5dp"
        android:hint="/"
        android:layout_marginLeft="255dp"
        android:background="#2196F3"
        />

    <Button
        android:id="@+id/button_four"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_seven"
        android:layout_marginTop="5dp"
        android:hint="4"
        />

    <Button
        android:id="@+id/button_five"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_seven"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="85dp"
        android:hint="5"
        />

    <Button
        android:id="@+id/button_six"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_seven"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="170dp"
        android:hint="6"
        />

    <Button
        android:id="@+id/button_multiple"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_seven"
        android:layout_marginTop="5dp"
        android:hint="*"
        android:layout_marginLeft="255dp"
        android:background="#2196F3"
        />

    <Button
        android:id="@+id/button_one"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_four"
        android:layout_marginTop="5dp"
        android:hint="1"
        />

    <Button
        android:id="@+id/button_two"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_four"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="85dp"
        android:hint="2"
        />

    <Button
        android:id="@+id/button_three"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_four"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="170dp"
        android:hint="3"
        />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_four"
        android:layout_marginTop="5dp"
        android:hint="-"
        android:layout_marginLeft="255dp"
        android:background="#2196F3"
        />

    <Button
        android:id="@+id/button_dot"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_one"
        android:layout_marginTop="5dp"
        android:hint="."
        />

    <Button
        android:id="@+id/button_zero"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_one"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="85dp"
        android:hint="0"
        />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_one"
        android:layout_marginTop="5dp"
        android:hint="="
        android:layout_marginLeft="170dp"
        android:background="#2196F3"
        />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_one"
        android:layout_marginTop="5dp"
        android:hint="+"
        android:layout_marginLeft="255dp"
        android:background="#2196F3"
        />

    <Button
        android:id="@+id/button_memory"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_dot"
        android:hint="M"
        />

    <Button
        android:id="@+id/button_memory_delete"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_dot"
        android:hint="MC"
        android:layout_marginLeft="85dp"
       />

    <Button
        android:id="@+id/button_database"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_dot"
        android:hint="HISTORY"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="170dp"
        android:background="#2196F3"/>


    


</RelativeLayout>
